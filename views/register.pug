extends layout

block content
    h1 Register
    form(method='POST', action='/users/register')
      #form-group
        label Name:
        input.form-controller(name='name', type='text')
      #form-group
        label Email:
        input.form-controller(name='email', type='text')
      #form-group
        label Username:
        input.form-controller(name='username', type='text')
      #form-group
        label Password:
        input.form-controller(name='password', type='password')
      #form-group
        label Confirm :
        input.form-controller(name='password2', type='password')
      br
      input.btn.btn-primary(type='submit', value='Submit')
