extends layout

block content
    h1 Login
    form(method='POST', action='/users/login')
      #form-group
        label User Name:
        input.form-controller(name='username', type='text')      
      #form-group
        label Password:
        input.form-controller(name='password', type='password')      
      br
      input.btn.btn-primary(type='submit', value='Submit')
